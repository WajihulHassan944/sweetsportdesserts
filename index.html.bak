    <script>
        if (document.getElementById('cart_items'))
            document.getElementById('cart_items').addEventListener('click', displayCart);

        function displayCart() {
            let page_url = window.location.pathname.substr(1);
            if (page_url.substr(0, 7) === 'receipt') {
                window.scrollTo(0, 500);
                return;
            }
            if (document.getElementById('cart').classList.contains('show')) {
                document.getElementById('cart').classList.remove('show');
                return;
            } else
                document.getElementById('cart').classList.add('show');
            let cart = localStorage.getItem('cart');
            let div = '';
            let div_cart = document.getElementById('cart');
            if (cart && document.getElementById('cart').classList.contains('show')) {
                cart = JSON.parse(cart);
                if (div_cart.innerHTML) return;
                div_cart.innerHTML = '';
                if (Object.keys(cart).length) {
                    for (let i in cart) {
                        if (i !== 'delivery_fee' && i !== 'discount' && i !== 'subtotal' && i !== 'total') {
                            let item = JSON.parse(cart[i]);
                            let addons = item['addons'];
                            div += "<a class=dropdown-items> <span><img src=" + '/images/items/' + item['image']['filename'] + " width='50px' height='50px'> </span> " + item['quantity'] + "x " + ((item['name'].length > 25) ? item['name'].substr(0, 24) + '....' : item['name']) + "</a>";
                            div += "<div class='dropdown-divider'></div>";
                        }
                    }
                    div += "<a onclick='viewCart()' class='cursor-pointer dropdown-item d-flex justify-content-center' > <i class='icon-shopping-cart mr-2'></i> View Details </a>";
                    div_cart.innerHTML = div;
                }
            } else {
                div = "<a class=dropdown-items> Your Cart is Empty </a>"
                div += "<div class='dropdown-divider'></div><a onclick='viewCart()'  class='cursor-pointer dropdown-item d-flex justify-content-center' > Add Items  </a>"
                div_cart.innerHTML = div;
                let dropdown = document.getElementById('item-dropdown');
                dropdown.style.left = 0;
                dropdown.style.right = '9rem';
            }
        }

        function viewCart() {
            let page_url = window.location.pathname.substr(1);
            if (page_url === 'menu' || page_url.substr(0, 8) === 'checkout' || page_url.substr(0, 7) === 'receipt') {
                window.scrollTo(0, 500);
            } else
                window.location.href = '/menu';
        }
    </script>
