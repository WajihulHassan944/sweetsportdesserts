                });

                //  localStorage.setItem('user_entered_address',postal_code);
                // window.location.href='/menu?service='+serviceId;
            } else {
                toastr.error('Please Enter Postal Code');
            }

        }

        function handleModeDineIn(locationId, sourceId) {

            var tableNumber = '';
            var serviceId = '';
            var bayNumber = '';

            if (sourceId === 1) {
                tableNumber = document.getElementById('table_number').value;
                bayNumber = '-1';
                serviceId = document.getElementById('service_dine_in_id').value;
            } else {
                bayNumber = document.getElementById('bay_number').value;
                tableNumber = '-1';
                serviceId = document.getElementById('service_id').value;
            }

            let name = '';

            if (tableNumber > 0 || bayNumber > 0) {
                if (sourceId === '1') {
                    name = 'DineIn';
                } else if (sourceId === '2' && serviceId === '4') {
                    name = 'DineIn';
                } else {
                    name = 'Collection';
                }

                $.ajax({
                    url: "/api/find_location_using_qrcode",
                    type: 'POST',
                    data: {
                        '_token': $('meta[name="csrf-token"]').attr('content'),
                        'table_number': tableNumber,
                        'service_name': name,
                        'service_id': serviceId,
                        'location_id': locationId,
                        'sourceId': sourceId,
                        'bayNumber': bayNumber
                    },
                    error: function(response) {
                        response = $.parseJSON(response.responseText);
                        $.each(response, function(key, value) {
                            console.log(value.error);
                            toastr.error(value, 'Error');
                        });
                    },
                    success: function(response) {
                        if (response.selected_location) {
                            localStorage.setItem('selected_location', JSON.stringify(response.selected_location));
                            localStorage.setItem('selected_service', serviceId);
                            localStorage.setItem('qrcheck', true);
                            window.location.href = '/menu?location_id=' + locationId + '&source_id=' + sourceId + '&table_number=' + tableNumber + '&bay_number=' + bayNumber + '&service=' + serviceId;
                        } else {
                            toastr.error(response.location_message);
                        }
                    }
                });
            } else {
                if (sourceId === '1')
                    toastr.error('Please Select Table');
                else
                    toastr.error('Please Select Bay Number');
            }
        }

        function showDineIn(select) {
            if (select.value == 4) {
                document.getElementById('dineIn_div').style.display = "block";
            } else {
                document.getElementById('dineIn_div').style.display = "none";
            }
        }
    </script>
	
	
	
