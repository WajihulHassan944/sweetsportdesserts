                    },
                    success: function(response) {
                        if (response.selected_location) {
                            //toastr.success(response.message);
                            /*this.is_deliverable = true;
                            this.selected_location = this.locations.find(location => response.data.selected_location.id == location.id);
                            if(response.data.delivery_fee)
                                this.delivery_fee = response.data.delivery_fee;*/
                            localStorage.setItem('selected_location', JSON.stringify(response.selected_location));
                            localStorage.setItem('post_code_response', JSON.stringify(response.post_code_response));
                            localStorage.setItem('user_address', postal_code);
                            localStorage.setItem('user_entered_address', postal_code);
                            window.location.href = '/menu?service=' + serviceId;
                        } else {
                            //this.is_open = 0;
